<li class="flex items-center justify-between gap-x-6 py-5">
    <div class="min-w-0">
        <div class="flex items-start gap-x-3">
            <p class="text-sm/6 font-semibold text-gray-900">{{ game.name }}</p>
            <p class="
            mt-0.5 whitespace-nowrap rounded-md {{ game.stateBackground }} px-1.5 py-0.5 text-xs font-medium
            {{ game.stateColor}} ring-1 ring-inset {{ game.stateOutline }}"
        >{{ game.stateForHuman }}</p>
        </div>
        <div class="mt-1 flex items-center gap-x-2 text-xs/5 text-gray-500">
            <p class="whitespace-nowrap">Pr√©vu le <time datetime="{{ game.date | date('Y-m-d') }}">{{ game.date | date('d/m/Y') }}</time></p>
            <svg viewBox="0 0 2 2" class="size-0.5 fill-current">
                <circle cx="1" cy="1" r="1" />
            </svg>
        </div>
    </div>
    <div class="flex flex-none items-center gap-x-4">
        <a href="{{ path('app_game_show', { game: game.slug }) }}" class="hidden rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:block">Voir</a>
    </div>
</li>
